{
  "name": "mmoitems-config-helper",
  "displayName": "MMOItems Config",
  "publisher": "salyyy",
  "version": "1.1.1",
  "description": "Seamlessly configure MMOItems with intelligent auto-completion, real-time stat and enchantment suggestions, and an interactive item simulator.üöÄ.",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:languageId"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/SalyyS1/mmoitems-vscode"
  },
  "homepage": "https://marketplace.visualstudio.com/publishers/salyyy",
  "bugs": {
    "url": "https://github.com/SalyyS1/mmoitems-vscode/issues"
  },

  "contributes": {
    "languages": [
      {
        "id": "yaml",
        "extensions": [
          ".yml",
          ".yaml"
        ],
        "aliases": [
          "YAML"
        ]
      }
    ],
    "commands": [
      {
        "command": "mmoitems.scaleItem",
        "title": "üîÑ LevelUp MMOItem",
        "category": "MMOItems"
      },
      {
        "command": "mmoitems.preview",
        "title": "üñºÔ∏è MMOItems Simulator",
        "category": "MMOItems"
      },
      {
        "command": "mmoitems.randomItem",
        "title": "üé≤ Random Item",
        "category": "MMOItems"
      },

      {
        "command": "mmoitems.bulkModify",
        "title": "üõ†Ô∏è Modify Item",
        "category": "MMOItems"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mmoitems.preview",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        },
        {
          "command": "mmoitems.scaleItem",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        },
        {
          "command": "mmoitems.randomItem",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        },
        {
          "command": "mmoitems.bulkModify",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mmoitems.preview",
        "key": "alt+p",
        "when": "editorTextFocus && resourceLangId == yaml"
      },
      {
        "command": "mmoitems.scaleItem",
        "key": "alt+s",
        "when": "editorTextFocus && resourceLangId == yaml"
      },
      {
        "command": "mmoitems.randomItem",
        "key": "alt+r",
        "when": "editorTextFocus && resourceLangId == yaml"
      },

      {
        "command": "mmoitems.bulkModify",
        "key": "alt+b",
        "when": "editorTextFocus && resourceLangId == yaml"
      }
    ]
  },
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "vsce package"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/assert": "^1.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.75.0",
    "assert": "^2.1.0",
    "mocha": "^11.1.0",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.5",
    "vsce": "^2.13.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
